@model OnlineJobPortal.Models.reset_password

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<section class="pt-100 login-register">
    <div class="container">
        <div class="row login-register-cover">
            <div class="col-lg-4 col-md-6 col-sm-12 mx-auto">
                <div class="text-center">
                    <p class="font-sm text-brand-2">Welcome back! </p>
                    <h2 class="mt-10 mb-5 text-brand-1">Reset Password</h2>
                    <p class="font-sm text-muted mb-30">Access to all features. No credit card required.</p>
                    <div class="divider-text-center"><span>Or continue with</span></div>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="login-register text-start mt-20">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.newPassword, "New Password *", htmlAttributes: new { @class = "form-label", @for = "input-1" })
                    <div>
                        @Html.EditorFor(model => model.newPassword, new { htmlAttributes = new { @class = "form-control", id = "input-1", type = "text", required = "required", placeholder = "Enter your new password" } })
                        @Html.ValidationMessageFor(model => model.newPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.reNewPassword, "Confirm New Password *", htmlAttributes: new { @class = "form-label", @for = "input-1" })
                    <div>
                        @Html.EditorFor(model => model.reNewPassword, new { htmlAttributes = new { @class = "form-control", id = "input-1", type = "text", required = "required", placeholder = "Enter confirm new password" } })
                        @Html.ValidationMessageFor(model => model.reNewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.HiddenFor(model => model.resetCode)
                </div>

                <div id="checkbox-error-message-1" class="text-primary text-center font-sm mb-30">@(ViewBag.Message != "" ? ViewBag.Message : "")</div>

                <div class="form-group">
                    <button class="btn btn-brand-1 hover-up w-100" type="submit" name="login">Send</button>
                </div>

                <div class="text-muted text-center">Don't have an Account? <a href='/auth/register'>Sign up</a></div>
            </div>
                }
            </div>
            <div class="img-1 d-none d-lg-block"><img class="shape-1" src="/Assets/jobbox/imgs/page/login-register/img-4.svg" alt="JobBox"></div>
            <div class="img-2"><img src="/Assets/jobbox/imgs/page/login-register/img-3.svg" alt="JobBox"></div>
        </div>
    </div>
</section>

