@model IEnumerable<OnlineJobPortal.Models.blog>

@foreach (var item in Model)
{
    <div class="col-lg-4 mb-30">
        <div class="card-grid-3 hover-up">
            <div class="text-center card-grid-3-image">
                <a href="/news/@item.meta/@item.id">
                    <figure>
                        <img style="height: 250px" src="/Assets/jobbox/imgs/page/blog/@(item.featured_image != null ? item.featured_image : "img-content.png")">
                        <!--
                        <img alt="jobBox" src="/Assets/jobbox/imgs/page/job-single-2/img3.png">
                        -->
                    </figure>
                </a>
            </div>
            <div class="card-block-info">
                <div class="tags mb-15">
                    @Html.Action("GetKeyword", "Blog", new { id = item.id })
                </div>
                <h5><a href="/news/@item.meta/@item.id">@item.title</a></h5>
                <p class="mt-10 color-text-paragraph font-sm">
                    @{
                        string content = item.content_1;
                        if (content.Length > 150)
                        {
                            content = content.Substring(0, 150) + "...";
                        }
                    }
                    @content
                </p>
                <div class="card-2-bottom mt-20">
                    <div class="row">
                        <div class="col-lg-6 text-start col-6 pt-15"><span class="color-text-paragraph-2 font-xs">@item.datebegin</span></div>
                        <div class="col-lg-6 text-end col-6 pt-15"><span class="color-text-paragraph-2 font-xs">@item.read_time mins to read</span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

