@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";

    // Thiết lập giá trị cho Session
    HttpContext.Current.Session["CurrentAccount"] = Session["CurrentAccount"] as OnlineJobPortal.Models.account;
}

<section class="section-box">
    <div class="banner-hero hero-2 hero-3">
        <div class="banner-inner">
            <div class="block-banner">
                <h1 class="text-42 color-white wow animate__animated animate__fadeInUp">The #1 <span class="color-green">Job Board for</span><br class="d-none d-lg-block">Hiring or Find your next job</h1>
                <div class="font-lg font-regular color-white mt-20 wow animate__animated animate__fadeInUp" data-wow-delay=".1s">Each month, more than 3 million job seekers turn to website in their search for work, making over 140,000 applications every single day</div>
                <div class="form-find mt-40 wow animate__animated animate__fadeIn" data-wow-delay=".2s">
                    @using (Html.BeginForm("jobs-list", "find-a-job", new { area = "", controller = "Job", action = "Index" }, FormMethod.Get))
                    {
                        <div class="box-industry">
                            <select name="industry" class="form-input mr-10 select-active input-industry">
                                @{ Html.RenderAction("GetIndustryName", "Home"); }
                            </select>
                        </div>
                        <select name="location" class="form-input mr-10 select-active">
                            @{ Html.RenderAction("GetLocation", "Home"); }
                        </select>
                        <input name="keywordName" class="form-input input-keysearch mr-10" type="text" placeholder="Your keyword... ">
                        <button type="submit" class="btn btn-default btn-find font-sm">Search</button>
                    }
                </div>
                <div class="list-tags-banner mt-20 wow animate__animated animate__fadeInUp" data-wow-delay=".3s">
                    <strong>Popular Searches:</strong>
                    @{ Html.RenderAction("GetPopularSearch", "Home"); }
                </div>
            </div>
        </div>
        <div class="container mt-60">
            <div class="box-swiper mt-50">
                <div class="swiper-container swiper-group-5 swiper">
                    <div class="swiper-wrapper pb-25 pt-5">
                        @{ Html.RenderAction("GetAllIndustries", "Home"); }
                    </div>
                    <div class="swiper-pagination swiper-pagination-style-border"></div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section-box mt-70">
    <div class="container">
        @{ Html.RenderAction("GetIndustriesOfDay", "Home"); }
    </div>
    <div class="row mt-40 mb-60">
        <div class="col-lg-12">
            <div class="text-center"><a class='btn btn-brand-1 btn-icon-load mt--30 hover-up' href='/find-a-job/jobs-list'>Load More Posts</a></div>
        </div>
    </div>
</section>
<section class="section-box mt-70">
