@model PagedList.IPagedList<OnlineJobPortal.Models.job_post>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Employer/Views/Shared/_MyLayout.cshtml";
    var currentAccount = HttpContext.Current.Session["CurrentAccount"] as OnlineJobPortal.Models.account;

}

<h2>My Jobs</h2>


<div class="row">
    <div class="col-lg-12">
        <div class="section-box">
            <div class="container">
                <div class="panel-white mb-30">
                    <div class="box-padding">
                        <div class="box-filters-job">
                            <div class="row">
                                <div class="col-xl-6 col-lg-5"><span class="font-sm text-showing color-text-paragraph">Showing 41-60 of 944 jobs</span></div>
                                <div class="col-xl-6 col-lg-7 text-lg-end mt-sm-15">
                                    <div class="display-flex2">
                                        <div class="box-border mr-10">
                                            <span class="text-sortby">Show:</span>
                                            <div class="dropdown dropdown-sort">
                                                <button class="btn dropdown-toggle" id="dropdownSort" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-display="static"><span>12</span><i class="fi-rr-angle-small-down"></i></button>
                                                <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="dropdownSort">
                                                    <li><a class="dropdown-item active" href="#">10</a></li>
                                                    <li><a class="dropdown-item" href="#">12</a></li>
                                                    <li><a class="dropdown-item" href="#">20</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="box-border">
                                            <span class="text-sortby">Sort by:</span>
                                            <div class="dropdown dropdown-sort">
                                                <button class="btn dropdown-toggle" id="dropdownSort2" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-display="static"><span>Newest Post</span><i class="fi-rr-angle-small-down"></i></button>
                                                <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="dropdownSort2">
                                                    <li><a class="dropdown-item active" href="#">Newest Post</a></li>
                                                    <li><a class="dropdown-item" href="#">Oldest Post</a></li>
                                                    <li><a class="dropdown-item" href="#">Rating Post</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row display-list d-flex flex-wrap">
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-6 flex-grow-1">
                                    <a href="@Url.Action("Details", "JobList", new { id = item.id })">
                                        <div class="card-style-2 hover-up" style="min-height:20vh">
                                            <div class="card-head">
                                                <div class="card-image"> <img src="/Assets/jobbox/imgs/brands/@item.company_profile.company_logo" alt="jobBox"></div>
                                                <div class="card-title" style="height:8vh">
                                                    <h6>@Html.DisplayFor(modelItem => item.job_title)</h6><span class="job-type">Full time</span><span class="time-post">@Html.DisplayFor(modelItem => item.datebegin)</span><span class="location">@Html.DisplayFor(modelItem => item.city), @Html.DisplayFor(modelItem => item.country)</span>
                                                </div>
                                            </div>
                                            <div class="card-tags" style="display: flex; flex-wrap: wrap; overflow: hidden; height: 5vh ">
                                                @Html.Action("GetJobKeywords", "JobList", new { id = item.id })

                                            </div>
                                            <div class="card-price"><strong>$@Html.DisplayFor(modelItem => item.job_salary)</strong><span class="hour">/Hour</span></div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                        <div class="paginations">
                            <ul class="pager">
                                <li class="@(Model.HasPreviousPage ? "" : "disabled")">
                                    <a class="pager-prev" href="@(Url.Action("Index", "JobList", new { pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize }))">
                                    </a>
                                </li>

                                @for (int i = 1; i <= Model.PageCount; i++)
                                {
                                    <li class="@(i == Model.PageNumber ? "active" : "")">
                                        <a class="@(i == Model.PageNumber ? "pager-number active" : "pager-number")" href="@(Url.Action("Index", "JobList", new { pageNumber = i, pageSize = Model.PageSize }))">
                                            @i
                                        </a>
                                    </li>
                                }

                                <li class="@(Model.HasNextPage ? "" : "disabled")">
                                    <a class="pager-next" href="@(Url.Action("Index", "JobList", new { pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize }))">
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
